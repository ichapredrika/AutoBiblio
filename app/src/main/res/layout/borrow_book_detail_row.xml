<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:elevation="90dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:text="TITLE"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_alignStart="@+id/post_title"
            android:layout_alignLeft="@+id/post_title"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="Author"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_author"
            android:layout_alignStart="@+id/post_title"
            android:layout_alignLeft="@+id/post_title"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="Publisher"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_collectionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_publisher"
            android:layout_alignStart="@+id/post_publisher"
            android:layout_alignLeft="@+id/post_publisher"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="Collection Type"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_collectionType"
            android:layout_alignStart="@+id/post_collectionType"
            android:layout_alignLeft="@+id/post_collectionType"
            android:layout_toLeftOf="@+id/post_image"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="Location"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:paddingBottom="5dp"
            android:scaleType="centerCrop" />

    </RelativeLayout>
</android.support.v7.widget.CardView>