<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/fullnamet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="Full Name"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullNameTxt"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/fullnamet"
        />

    <TextView
        android:id="@+id/univIdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullNameTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="PresUniv ID"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/univIdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/univIdt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <TextView
        android:id="@+id/pobt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/univIdTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Place of Birth"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pobTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pobt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <TextView
        android:id="@+id/dobt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pobTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Date of Birth"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dobTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <TextView
        android:id="@+id/addresst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addresst"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <TextView
        android:id="@+id/phonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressTxt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Phone"
        android:textColor="#63B3BA"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneTxt"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/phonet"/>

    <TextView
        android:id="@+id/memberTypet"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Type"
        android:textColor="#63B3BA"
        android:textStyle="bold"
        android:layout_below="@+id/phoneTxt"/>

    <TextView
        android:id="@+id/memberTypeTxt"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/memberTypet"/>

    <TextView
        android:id="@+id/balanceAmountt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance Amount"
        android:textColor="#63B3BA"
        android:textStyle="bold"
        android:layout_below="@+id/memberTypeTxt" />


    <TextView
        android:id="@+id/balanceAmountTxt"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/balanceAmountt" />

    <Button
        android:id="@+id/settingProfileButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/balanceAmountTxt"
        android:layout_marginStart="-64dp"
        android:layout_marginTop="79dp"
        android:layout_toEndOf="@+id/memberTypet"
        android:background="@drawable/mybutton"
        android:onClick="profileSettingClick"
        android:text="Setting"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/settingProfileButton"
        android:layout_alignTop="@+id/settingProfileButton"
        android:layout_marginStart="266dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/mybutton"
        android:onClick="logoutClick"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

  <!--  <Button
        android:id="@+id/reminderButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/settingProfileButton"
        android:layout_alignTop="@+id/settingProfileButton"
        android:layout_marginStart="131dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/mybutton"
        android:onClick="reminderClick"
        android:text="Reminder"
        android:textAllCaps="false"
        android:textColor="#ffffff" />
-->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main"/>
</RelativeLayout>
