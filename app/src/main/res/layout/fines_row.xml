<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:layout_margin="7dp"
    android:elevation="90dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/post_titleFines"
            android:text="TITLE"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/damageCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/post_titleFines"
            android:layout_alignStart="@+id/post_titleFines"
            android:layout_below="@+id/post_titleFines"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/post_damageCost"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Damage Cost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/overdueCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/damageCost"
            android:layout_alignStart="@+id/damageCost"
            android:layout_below="@+id/damageCost"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/post_overdueCost"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Overdue Cost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/overdueCost"
            android:layout_alignStart="@+id/overdueCost"
            android:layout_below="@+id/overdueCost"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/post_totalCost"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Total Cost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/paidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/totalCost"
            android:layout_alignStart="@+id/totalCost"
            android:layout_below="@+id/totalCost"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/post_paidAmount"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Paid Amount"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_damageCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_titleFines"
            android:paddingEnd="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="DamageCost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_overdueCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_damageCost"
            android:paddingEnd="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Overdue Cost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_overdueCost"
            android:paddingEnd="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Total Cost"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_paidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_totalCost"
            android:paddingEnd="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="Paid Amount"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_paidOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_paidAmount"
            android:paddingEnd="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Paid Off"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>
</android.support.v7.widget.CardView>